<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      {{#link-to 'post' post.id}}
        <img src="{{post.image}}" alt="image-post" />
      <div class="caption">
        <h2>{{post.title}}</h2>
        <h4>{{post.description}}</h4>
        <h5>By {{post.author}} on {{post.date}}</h5>
      </div>
      {{/link-to}}
    </div>
  </div>
