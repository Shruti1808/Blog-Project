{{#if addNewTag}}
<h1>New Tag</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Tag Name</label>
      {{input value=name id="name"}}
    </div>
    <button {{action 'saveTag'}}>Save</button>
    </form>
  </div>
  {{else}}
  <button{{action 'tagFormShow'}}>New Tag</button>
  {{/if}}
